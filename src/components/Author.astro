---
import classNames from 'classnames';
interface Props {
  author: string;
  size?: 'sm' | 'lg';
  className?: string;
}

const { author, size, className } = Astro.props;
const divClasses = classNames(
  'flex items-center space-x-2 opacity-80',
  className,
);
const svgClasses = classNames('inline-block h-6 w-6 fill-skin-base', {
  'scale-90': size === 'sm',
  'scale-110': size === 'lg',
});
const spanClasses = classNames('italic', {
  'text-sm': size === 'sm',
  'text-base': size === 'lg',
});
---

<div class={divClasses}>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class={svgClasses}
    aria-hidden
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"
    ></path>
  </svg>

  <span class="sr-only">Written by:</span>
  <span class={spanClasses}>
    {author}
  </span>
</div>
